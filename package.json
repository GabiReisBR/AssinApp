{
  "compilerOptions": {
    "module": "ESNext",                 
    "target": "ES6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,   
    "types":["node","express"]              
  },
  "include": ["src/*/.ts"],
  "exclude": ["node_modules"]
}