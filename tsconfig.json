{
  "compilerOptions": {
    "module": "CommonJS",                 
    "target": "ES6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true                 
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
